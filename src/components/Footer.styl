
.footer {
  text-align: center;
  font-size: 1.8rem;

  .lang-list {
    margin: 0;
    padding: 0;
    margin: 1rem 0;

    .lang {
      list-style-type: none;
      display: inline;

      &:hover {
        cursor: pointer;
        color: var(--black-hover);
      }

      &:not(:first-child):before {
        content: ' / ';
      }
    }
  }

  .meta {
    margin: 1rem 0;
    opacity: 0.8;
  }
}